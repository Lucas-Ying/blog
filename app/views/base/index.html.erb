
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(<%= image_path('home-bg.jpg') %>);">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Lucas' Blog</h1>
          <hr class="small">
          <span class="subheading">Web Developer - Focus on Machine Learning & Data Mining</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% @posts.each do |post| %>
          <div class="post-preview">
            <%= link_to post_path(post) do %>
                <h2 class="post-title">
                  <%= post.title %>
                </h2>
                <h3 class="post-subtitle" style="font-weight: 500;">
                  <%= post.subtitle %>
                </h3>
            <% end %>
            <h5 class="post-subtitle" style="font-weight: 300;">
              <%= post.body %>
            </h5>
            <p class="post-meta">Posted by <a href="#">Lucas</a> on <%= post.created_at %></p>
          </div>
          <hr>
      <% end %>

      <!-- Pager -->
      <ul class="pager">
        <li class="next">
          <a href="#">Older Posts &rarr;</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<hr>